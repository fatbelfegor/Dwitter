<div class="row">
	<div class="col-xs-3">
		<!-- Explore page description -->
		<div class="panel panel-default">
  		<div class="panel-body">
	  		<h5 style="color: grey; font-size: 125%;">Explore</h5>
	  		<p style="opacity: 0.5; font-size: 90%;">
	  			This page aggregates post from ALL users. This meansthat you can find new people to follow,
	  			and your posts will also appear here so other people can see your opinions and interests and follow you
	  			if they chose.
	  		</p>
			</div>
		</div>
		
		<!-- Trends on Dwitter links -->
		<div class="panel panel-default">
  		<div class="panel-body">
				<h5 style="color: grey; font-size: 125%;">Trends</h5>
					<a href="">#Andrew Luck</a><br>
						<span style="color: grey;">71k Posts</span><br><br>
					<a href="">#Taylor Hall</a><br>
						<span style="color: grey;">65k Posts</span><br><br>
					<a href="">#GrowingUpHispanic</a><br>
						<span style="color: grey;">56k Posts</span><br><br>
					<a href="">#IGetFrustratedWhen</a><br>
						<span style="color: grey;">45k Posts</span><br><br>
					<a href="">#Crystal Pepsi></a><br>
						<span style="color: grey;">31k Posts</span><br><br>
			</div>
		</div>
	</div>

	<!-- Stream of dwitts -->
	<div class="col-xs-6">
	<% if user_signed_in? %>
		<%= render '/components/post_form' %><br><br>
	<% end %>
			<% for @p in @posts %>
			<div class="panel panel-default post-panel">
	  		<div class="panel-body row">
	  			<div class="col-sm-1">
	  				<img src="/avatar.png" class="rounded-img" height="50px" width="50px"></img>
	  			</div>
	  			<div class="col-sm-11">
	  				<p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span> <span class="post-creation">- <%= @p.created_at.to_formatted_s(:short) %></span></p>
	  				<p class="post-content" ><%= @p.content %></p>
	  			</div>
	  			<div class="col-sm-12">
	  				<p class="post-links">
	  					<span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
	  					<span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
	  					<span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
	  					<span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
	  					<a href="#">View conversation</a>
	  				</p> 
	  			</div>
				</div>
			</div>
			<% end %>
			<!-- End of the dwitts stream -->
			
			<!-- Back to top Icon and the link -->
			<div class="panel panel-default post-panel">
	  		<div class="panel-body row">
	  			<div class="col-sm-12">
	  				<center><img src="/icon.png" height="24px" width="45px"><a href="#top"><p class="opacity: .7; color: grey;">Back to Top</span></p></a>
	  				</center>
	  			</div>
	  		</div>
	  	</div>
	</div>

	<!-- Who to Follow links -->
	<div class="col-xs-3">
		<div class="panel panel-default">
  		<div class="panel-body">
				<h5 style="color: grey; font-size: 125%;">Who to follow</h5>
				<% for @u in @users_to_follow do %>
					<p style="font-weight: bold; opacity: 0.85;"><a href="/user/<%= @u.username %>"><%= @u.username %></a></p>
				<% end%>
			</div>
		</div>
		<!-- Useful links to internal pages -->
		<div class="panel panel-default">
  		<div class="panel-body">
				<p style="opacity: 0.5; font-size: 90%;">Â© 2016 Dwitter About   Help   Blog   Status   Jobs   Terms   Privacy   Cookies   Ads  Brand   Advertise   Businesses   </p>
			</div>
		</div>
	</div>

</div>
